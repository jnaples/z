---
import Layout from "../layouts/Layout.astro";
import LogoDarkTriangle from "../assets/logo--zorus-square-dark.svg?url";
import Section from "../components/Section.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
---

<Layout title="My Astro Site">
  <main>
    <Section>
      <div class="container mx-auto max-w-7xl px-4 md:px-6">
        <Breadcrumb page="Contact" />

        <div class="text-center">
          <h1
            class="text-4xl mb-6 font-semibold font-monospace w-full leading-tight mx-auto md:leading-tight md:text-5xl md:max-w-lg"
          >
            Send us a message
          </h1>
          <p class="text-lg mb-10">
            We'll make sure to respond within 24 hours.
          </p>
          <div
            data-sal="slide-up"
            data-sal-duration="600"
            class="contact-form"
            aria-label="Contact Zorus"
          >
            <div
              class="bg-white rounded-lg p-6 md:px-20 md:py-12 max-w-[850px] mx-auto"
            >
              <img
                loading="lazy"
                src={LogoDarkTriangle}
                alt="Zorus logo"
                class="mx-auto mb-10"
              />
              <div>
                <script
                  is:inline
                  charset="utf-8"
                  type="text/javascript"
                  src="//js.hsforms.net/forms/embed/v2.js"></script>
                <script is:inline>
                  hbspt.forms.create({
                    region: "na1",
                    portalId: "3903009",
                    formId: "7a108df9-a462-4543-9c77-cae0f4c15c18",
                  });
                </script>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Section>
  </main>
</Layout>
